{% block body %}
	<section class="gallery-home p-section">
		<div class="section-titre">
			<h1>Mes shootings</h1>
			<h4>Mes shootings</h4>
		</div>

		<div class="container">

			<div class="d-flex justify-content-between align-items-center">
				<div>
					<h2 class="fs-5" style="color: white;">Bonjour
						{{ app.user.firstName }}
						{{ app.user.lastName }}<i class="far fa-hand-paper" style="margin-left: 0.5em; transform: rotate(20deg); color: #f96f00;"></i></h2>
					<p style="color: white; font-size: 14px;">Vous trouverez ci-dessous vos shootings</p>
				</div>

				<div>
					<a href="{{ path('home') }}">DÃ©connexion</a>
				</div>
			</div>
			<hr style="color: white;">

			<div class="shooting-content d-flex justify-content-around">
				{% for shooting in app.user.shootings %}

					<div class="shadow-lg">
						<div class="img-wrapper">
							<a href="{{ path('gallery_detail', { 'slug': shooting.slug }) }}">
								<img src="../uploads/{{ shooting.cover }}" alt="">
							</a>
							<h2>{{ shooting.name }}</h2>
						</div>
					</div>
				{% endfor %}
			</div>

		</div>
	</section>
{% endblock %}
